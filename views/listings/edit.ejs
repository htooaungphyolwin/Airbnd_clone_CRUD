<% layout('layouts/boilerplate') %>

<main>
  <h3 style="text-align: center">Edit your Listing</h3>
  <form
    class="booking-form"
    method="POST"
    action="/listings/<%= listing._id %>?_method=PUT"
  >
    <input name="listing[title]" value="<%= listing.title %>" type="text" />
    <br /><br />
    <textarea name="listing[description]" cols="30" rows="10">
<%= listing.description %></textarea
    >
    <br /><br />
    <input
      name="listing[image][filename]"
      value="<%= listing.image.filename %>"
      type="text"
      style="display: none"
    />
    <input
      name="listing[image][url]"
      value="<%= listing.image.url %>"
      type="text"
    />
    <br /><br />
    <input name="listing[price]" value="<%= listing.price %>" type="number" />
    <br /><br />
    <input name="listing[country]" value="<%= listing.country %>" type="text" />
    <br /><br />
    <input
      name="listing[location]"
      value="<%= listing.location %>"
      type="text"
    />
    <br /><br />
    <button>Edit</button>
  </form>
</main>
