<% layout('layouts/boilerplate') %>
<main>
  <h3 style="text-align: center">Create a New Listing</h3>
  <form class="booking-form" method="POST" action="/listings">
    <input name="listing[title]" placeholder="Title" type="text" required />
    <br /><br />
    <textarea
      name="listing[description]"
      cols="30"
      rows="10"
      placeholder="Description"
      required
    ></textarea>
    <br /><br />
    <input
      name="listing[image][filename]"
      placeholder="Image Filename"
      type="text"
      value="listingimage"
      style="display: none"
    />
    <input
      name="listing[image][url]"
      placeholder="Image URL"
      type="text"
      required
    />
    <br /><br />
    <input
      name="listing[price]"
      placeholder="Price per night"
      type="number"
      required
    />
    <br /><br />
    <input name="listing[country]" placeholder="Country" type="text" required />
    <br /><br />
    <input
      name="listing[location]"
      placeholder="Location"
      type="text"
      required
    />
    <br /><br />
    <button>Create Listing</button>
  </form>
</main>
